{
  "compilerOptions": {
		"outDir": "./dist",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
		"sourceMap": true,
    "allowJs": true,
		"baseUrl": "./",
		"declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
	"exclude": [
		"node_modules"
	],
  "include": [
    "./src/**/*"
  ]
}
